{
   "name": "recoil-toolkit",
   "version": "0.0.8",
   "description": "recoil-toolkit",
   "main": "./src/index.ts",
   "types": "./src/types.ts",
   "engines": {
      "node": ">=10",
      "npm": ">=6"
   },
   "files": [
      "build",
      "src",
      "README.md"
   ],
   "scripts": {
      "build:clean": "rimraf build",
      "build:es5": "tsc -p tsconfigEs5.json",
      "build:es6": "tsc -p tsconfigEs6.json",
      "build": "npm run build:clean && npm run build:es5 && npm run build:es6",
      "test" : "jest",
      "test:coverage" : "jest --coverage && npx make-coverage-badge --output-path=cov-badge.svg",
      "watch": "tsc -p tsconfigEs6.json -w",
      "prepare": "npm run build",
      "prepublish": "npm run build"
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/salvoravida/recoil-toolkit"
   },
   "keywords": [
      "recoil-toolkit",
      "react",
      "recoil",
      "redux",
      "toolkit"
   ],
   "author": "Salvatore Ravid√†",
   "license": "MIT",
   "bugs": {
      "url": "https://github.com/salvoravida/recoil-toolkit/issues"
   },
   "homepage": "https://github.com/salvoravida/recoil-toolkit#readme",
   "peerDependencies": {
      "react": "^16.8.3 || ^17",
      "recoil": "^0.1.2"
   },
   "peerDependenciesMeta": {
      "redux": {
         "optional": true
      }
   },
   "dependencies": {
      "tiny-invariant": "^1.1.0"
   },
   "devDependencies": {
      "@testing-library/react": "^11.2.6",
      "@testing-library/react-hooks":"^5.1.2",
      "@types/jest": "^26.0.23",
      "@types/react": "^17.0.4",
      "rimraf": "^3.0.2",
      "redux": "^4.1.0",
      "redux-mock-store": "^1.5.4",
      "ts-jest": "^26.5.5",
      "typescript": "^4.1.3"
   }
}
